<!DOCTYPE html>\par
<html>\par
<head>\par
    <title>Down Counter</title>\par
    <script>\par
        let timer;\par
        let remainingTime;\par
        let isPaused = false;\par
\par
        function startCounter() \{\par
            const inputTime = parseInt(document.getElementById("timeInput").value);\par
            if (isNaN(inputTime) || inputTime <= 0) \{\par
                alert("Please enter a valid number of seconds.");\par
                return;\par
            \}\par
\par
            remainingTime = inputTime;\par
            updateDisplay(remainingTime);\par
\par
            timer = setInterval(function () \{\par
                if (!isPaused) \{\par
                    remainingTime--;\par
                    updateDisplay(remainingTime);\par
\par
                    if (remainingTime <= 0) \{\par
                        clearInterval(timer);\par
                        alert("Time's up!");\par
                    \}\par
                \}\par
            \}, 1000);\par
        \}\par
\par
        function updateDisplay(time) \{\par
            document.getElementById("display").innerText = time + " seconds remaining";\par
        \}\par
\par
        function pauseCounter() \{\par
            isPaused = true;\par
        \}\par
\par
        function resumeCounter() \{\par
            isPaused = false;\par
        \}\par
\par
        function stopCounter() \{\par
            clearInterval(timer);\par
            document.getElementById("display").innerText = "Counter stopped.";\par
        \}\par
    </script>\par
</head>\par
<body>\par
    <h1>Down Counter</h1>\par
    <input type="number" id="timeInput" placeholder="Enter time in seconds">\par
    <button onclick="startCounter()">Start</button>\par
    <button onclick="pauseCounter()">Pause</button>\par
    <button onclick="resumeCounter()">Resume</button>\par
    <button onclick="stopCounter()">Stop</button>\par
    <p id="display"></p>\par
</body>\par
</html>\par
